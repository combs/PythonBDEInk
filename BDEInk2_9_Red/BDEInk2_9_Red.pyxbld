def make_ext(modname, pyxfilename):
    from distutils.extension import Extension
    import os
    base = os.path.dirname(os.path.realpath(__file__))
    print("pyxbld hello from " + base)
    ext = Extension(
        modname,
        sources=[pyxfilename],
        language='c++')

    ext.cython_directives = {'language_level': 3}
    return ext
        